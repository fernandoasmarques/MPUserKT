<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeActivity_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="SplashActivity_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="DatePickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="viewPagerTitleStrip">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BebasNeueFont">
        <item name="android:fontFamily">@font/bebas</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="GoogleSansFont">
        <item name="android:fontFamily">@font/googlesansregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#EEEEEE</item>
    </style>

    <style name="spinnerEndereco" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/bebas</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
