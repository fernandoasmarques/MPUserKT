<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_act_tela_background"
    tools:context=".activities.HomeActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/HomeActivity_guideline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/HomeActivity_guideline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/HomeActivity_guideline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".9" />

    <ImageView
        android:id="@+id/HomeActivity_imgLogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="30dp"

        android:src="@drawable/meu_pedido_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/HomeActivity_btnEntrar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_act_btn_entrar"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/HomeActivity_guideline2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/HomeActivity_guideline1" />


    <Button
        android:id="@+id/HomeActivity_btnEntrarFacebook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_act_btn_entrar_facebook"
        android:drawableStart="@drawable/ic_action_facebook"
        android:drawablePadding="-40dp"
        android:paddingStart="20dp"
        android:text="Entrar com o Facebook"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/HomeActivity_guideline3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HomeActivity_btnEntrar" />

    <Button
        android:id="@+id/HomeActivity_btnCadastrar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_act_btn_cadastrar"
        android:text="Cadastre-se"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HomeActivity_btnEntrarFacebook" />
</androidx.constraintlayout.widget.ConstraintLayout>