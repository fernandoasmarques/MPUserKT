<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResumoPedidoActivity">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ResumoPedidoActivity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ToolbarTheme" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ResumoPedidoActivity_guideline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ResumoPedidoActivity_guideline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ResumoPedidoActivity_guideline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ResumoPedidoActivity_guideline4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5" />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ResumoPedidoActivity_cardResumoPedido"
        android:layout_width="0dp"
        android:layout_height="328dp"
        android:layout_below="@id/ResumoPedidoActivity_toolbar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_list_resumopedido"
        android:focusable="true"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardElevation="5dp"
        card_view:layout_constraintBottom_toTopOf="@+id/ResumoPedidoActivity_guideline1"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/ResumoPedidoActivity_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_list_resumopedido"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ResumoPedidoActivity_titulo_list_resumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="10dp"
                android:layout_gravity="end"
                android:background="@drawable/background_titulo_listresumo"
                android:fontFamily="@font/bebas"
                android:text="Resumo do Pedido"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <ListView
                android:id="@+id/ResumoPedidoActivity_listView_resumopedido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <View
        android:id="@+id/ResumoPedidoActivity_background_subtotal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ff6600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ResumoPedidoActivity_guideline3" />


</androidx.constraintlayout.widget.ConstraintLayout>