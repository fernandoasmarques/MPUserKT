<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_escolher_endereco_txtNomeLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothamblack"
            android:text="Casa"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/item_escolher_endereco_txtLogradouro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Texto" />

        <TextView
            android:id="@+id/item_escolher_endereco_txtReferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Texto" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <RadioButton
            android:id="@+id/item_escolher_endereco_radioButtonEntregarAqui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothamblack"
            android:layout_gravity="center"
            android:gravity="center_horizontal"

            android:layoutDirection="rtl"/>
    </FrameLayout>
</LinearLayout>
