<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_header_alertdialog" />

        <ImageView
            android:id="@+id/alertdialog_imagemmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/toolbarlogo9" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alertdialog_textoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/alertdialog_imagemmp"
            android:fontFamily="@font/googlesansbold"
            android:text="Confie em nÃ³s ;)"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alertdialog_textoMensagem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/googlesansregular"
        android:padding="15dp"
        android:text="Texto aqui"
        android:textAlignment="center"
        android:textSize="18sp" />

</com.google.android.material.card.MaterialCardView>

